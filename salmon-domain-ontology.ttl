@prefix : <http://w3id.org/salmon-domain-ontology#> .
@prefix salmon: <http://w3id.org/salmon/> .
@prefix sosa: <http://www.w3.org/ns/sosa/> .
@prefix iadopt: <https://w3id.org/iadopt/ont/> .
@prefix dwc: <http://rs.tdwg.org/dwc/terms/> .
@prefix obo: <http://purl.obolibrary.org/obo/> .
@prefix time: <http://www.w3.org/2006/time#> .
@prefix geosparql: <http://www.opengis.net/ont/geosparql#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

# Modeling notes:
# - Prefer SOSA + I-ADOPT for upper alignment; Darwin Core terms only where the crosswalk specified.
# - Measurements are modeled as SOSA Observations specializing on feature, property, and procedure.
# - SamplingEvents are SOSA Sampling activities with a feature of interest, sample result, and time.
# - All fork-length methods/measurements are consolidated in the salmon namespace for reuse.

<> a owl:Ontology ;
   rdfs:label "Salmon domain ontology alignments" ;
   rdfs:comment "Upper-level alignments (SOSA, I-ADOPT, Darwin Core) with salmon terms from mapping-neville-observation.graphml reworked into the SOSA/I-ADOPT model; OBOE classes and properties are not used." .

# Upper-level crosswalk (no OBOE)
iadopt:Entity owl:equivalentClass sosa:FeatureOfInterest .
iadopt:Property owl:equivalentClass sosa:Property .
sosa:Observation owl:equivalentClass dwc:Occurrence .
sosa:Sampling owl:equivalentClass dwc:Event .
sosa:Sample owl:equivalentClass dwc:MaterialSample ;
   rdfs:comment "Crosswalk used 'MaterialEntity'; aligned here to Darwin Core MaterialSample for concreteness." .
sosa:ObservingProcedure owl:equivalentClass dwc:Protocol ;
   rdfs:comment "Crosswalk lists Protocol; Darwin Core does not define a class, so dwc:Protocol is used as a placeholder identifier." .
iadopt:Variable a owl:Class .
iadopt:Constraint a owl:Class .
iadopt:StatisticalModifier a owl:Class .

# Feature of interest hierarchy
salmon:Entity rdfs:subClassOf sosa:FeatureOfInterest , iadopt:Entity .
salmon:SalmonIndividual rdfs:subClassOf salmon:Entity .
salmon:SalmonGroup rdfs:subClassOf salmon:Entity .
salmon:SalmonPopulationGroup rdfs:subClassOf salmon:SalmonGroup .
salmon:SalmonStockUnit rdfs:subClassOf salmon:SalmonGroup .
salmon:HabitatUnit rdfs:subClassOf salmon:Entity .
geosparql:Feature rdfs:subClassOf sosa:FeatureOfInterest .

# Property hierarchy (I-ADOPT property component)
salmon:Characteristic rdfs:subClassOf sosa:Property , iadopt:Property .
salmon:MorphologicalCharacteristic rdfs:subClassOf salmon:Characteristic .
salmon:FishLength rdfs:subClassOf salmon:MorphologicalCharacteristic .
salmon:forkLength owl:equivalentClass salmon:FishLength .
salmon:FishWeight rdfs:subClassOf salmon:MorphologicalCharacteristic .
salmon:BodyShape rdfs:subClassOf salmon:Characteristic .
salmon:SalmonLifeStage rdfs:subClassOf salmon:Characteristic .
salmon:Life-HistoryCharacteristic rdfs:subClassOf salmon:Characteristic .
salmon:fusiform rdfs:subClassOf salmon:BodyShape .
salmon:alevin rdfs:subClassOf salmon:SalmonLifeStage .
salmon:Run rdfs:subClassOf salmon:Life-HistoryCharacteristic .

# Procedures (SOSA ObservingProcedure / Procedure)
salmon:FishLengthMeasurementMethod rdfs:subClassOf sosa:Procedure .
salmon:FishForkLengthMeasurementMethod rdfs:subClassOf salmon:FishLengthMeasurementMethod .
salmon:ForkLengthMeasurementMethod rdfs:subClassOf salmon:FishForkLengthMeasurementMethod .
salmon:ForkLengthMeasurementFieldMethod rdfs:subClassOf salmon:ForkLengthMeasurementMethod .
salmon:ForkLengthMeasurementLabMethod rdfs:subClassOf salmon:ForkLengthMeasurementMethod .
salmon:EnumerationMethod rdfs:subClassOf sosa:Procedure .

# Observations / measurements (SOSA Observation specializations)
salmon:Observation rdfs:subClassOf sosa:Observation .

salmon:Measurement rdfs:subClassOf salmon:Observation ,
   [ a owl:Restriction ;
     owl:onProperty sosa:hasFeatureOfInterest ;
     owl:someValuesFrom salmon:Entity ],
   [ a owl:Restriction ;
     owl:onProperty sosa:observedProperty ;
     owl:someValuesFrom salmon:Characteristic ] .
salmon:Measurement rdfs:comment "A salmon-domain observation focused on one feature of interest and one characteristic." .

salmon:FishLengthMeasurementType rdfs:subClassOf salmon:Measurement ,
   [ a owl:Restriction ;
     owl:onProperty sosa:observedProperty ;
     owl:someValuesFrom salmon:FishLength ],
   [ a owl:Restriction ;
     owl:onProperty sosa:usedProcedure ;
     owl:someValuesFrom salmon:FishLengthMeasurementMethod ] .

salmon:ForkLengthMeasurement rdfs:subClassOf salmon:FishLengthMeasurementType ,
   [ a owl:Restriction ;
     owl:onProperty sosa:observedProperty ;
     owl:someValuesFrom salmon:forkLength ] .

salmon:StandardLengthMeasurement rdfs:subClassOf salmon:FishLengthMeasurementType .
salmon:TotalLengthMeasurement rdfs:subClassOf salmon:FishLengthMeasurementType .
salmon:IndividualMeasurement rdfs:subClassOf salmon:Measurement .
salmon:ModelMeasurement rdfs:subClassOf salmon:Measurement .
salmon:AggregatedMeasurement rdfs:subClassOf salmon:Measurement ,
   [ a owl:Restriction ;
     owl:onProperty salmon:basedOn ;
     owl:someValuesFrom salmon:EnumerationMethod ] .

# Sampling and samples
salmon:SamplingEvent rdfs:subClassOf sosa:Sampling ,
   [ a owl:Restriction ;
     owl:onProperty sosa:hasFeatureOfInterest ;
     owl:someValuesFrom geosparql:Feature ],
   [ a owl:Restriction ;
     owl:onProperty sosa:hasResult ;
     owl:someValuesFrom sosa:Sample ],
   [ a owl:Restriction ;
     owl:onProperty sosa:resultTime ;
     owl:someValuesFrom time:Instant ] .
salmon:SamplingEvent rdfs:comment "A sampling activity that targets a geographic feature, yields a sample, and records a time." .

sosa:FeatureOfInterest sosa:hasSample sosa:Sample .
sosa:Sample sosa:isResultOf sosa:Sampling .

# Taxon classes
obo:NCBITaxon_8018 rdfs:subClassOf obo:NCBITaxon_8015 .
salmon:NCBITaxon_8018 rdfs:subClassOf obo:NCBITaxon_8018 .

# Object properties sourced from the mapping (renamed into SOSA/I-ADOPT framing)
salmon:hasMeasurement a owl:ObjectProperty ;
   rdfs:domain sosa:FeatureOfInterest ;
   rdfs:range salmon:Measurement .

salmon:observedTaxonFamily a owl:ObjectProperty ;
   rdfs:domain sosa:Observation ;
   rdfs:range obo:NCBITaxon_8015 .

salmon:observedTaxonSpecies a owl:ObjectProperty ;
   rdfs:domain sosa:Observation ;
   rdfs:range obo:NCBITaxon_8018 .

salmon:hasEventType a owl:ObjectProperty ;
   rdfs:domain salmon:SamplingEvent ;
   rdfs:range salmon:EventType .

salmon:basedOn a owl:ObjectProperty ;
   rdfs:domain salmon:AggregatedMeasurement ;
   rdfs:range salmon:EnumerationMethod .

salmon:characteristicFor a owl:ObjectProperty ;
   rdfs:domain sosa:Property ;
   rdfs:range sosa:FeatureOfInterest .

# Additional event and feature classes
salmon:EventType a owl:Class .
salmon:FishingType rdfs:subClassOf salmon:EventType .
salmon:seiningEvent rdfs:subClassOf salmon:FishingType .
salmon:GeographicFeature rdfs:subClassOf geosparql:Feature .
